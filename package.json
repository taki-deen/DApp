{
  "name": "crypto-presale-dapp",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "frontend:install": "cd frontend && npm install",
    "frontend:dev": "cd frontend && npm run dev",
    "frontend:build": "cd frontend && npm run build",
    "frontend:start": "cd frontend && npm run start",
    "contracts:install": "cd smart-contracts && npm install",
    "contracts:compile": "cd smart-contracts && npm run compile",
    "contracts:test": "cd smart-contracts && npm run test",
    "contracts:deploy": "cd smart-contracts && npm run deploy",
    "contracts:deploy:testnet": "cd smart-contracts && npm run deploy:testnet",
    "install:all": "npm run contracts:install && npm run frontend:install",
    "dev": "npm run frontend:dev",
    "build": "npm run contracts:compile && npm run frontend:build",
    "test": "npm run contracts:test"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@nomicfoundation/hardhat-toolbox-mocha-ethers": "^3.0.0",
    "@types/chai": "^4.3.20",
    "@types/chai-as-promised": "^8.0.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.10",
    "chai": "^5.3.3",
    "concurrently": "^8.2.2",
    "ethers": "^6.15.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^2.17.0",
    "mocha": "^11.7.4",
    "typescript": "~5.8.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.3"
  },
  "type": "module"
}
